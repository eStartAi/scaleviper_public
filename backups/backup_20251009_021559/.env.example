# === Mode Selection ===
# auto    = full self-trading (ScaleViper calculates signals)
# webhook = signal execution (TradingView/scanner alerts)
RUN_MODE=auto

# === Broker & Execution ===
DEFAULT_BROKER=kraken         # or oanda_practice / oanda_live
EXCHANGE=kraken
DRY_RUN=true                  # true = simulate, false = live orders

# === Risk Management ===
DEFAULT_SL_PCT=2              # Stop-loss % per trade
DEFAULT_TP_PCT=3              # Take-profit % per trade
DAILY_PROFIT_TARGET=7         # % profit target before stopping
MAX_DAILY_LOSS=3              # % loss limit before stopping
MAX_CONSECUTIVE_LOSSES=2      # Number of losses before halting

# === Webhook Config ===
WEBHOOK_SECRET=your-secret
APP_PORT=5003                 # Port for webhook server

# === Telegram Alerts ===
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id
ENABLE_TELEGRAM_ALERTS=true

# === Watchlist ===
WATCHLIST=ETH/USD,SOL/USD,MATIC/USD

# === Broker API Keys (Example: Kraken) ===
KRAKEN_API_KEY=your-kraken-key
KRAKEN_API_SECRET=your-kraken-secret
